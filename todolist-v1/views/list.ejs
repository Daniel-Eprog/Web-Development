<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>To Do List</title>
    <link rel="stylesheet" href="css/styles.css">
</head>
<body>

    <div class="box" id="heading">
        <h1> <%= listTitle %> </h1>
    </div>

    <div class="box">
        <% newItems.forEach(function(item){ %>
        <form action="/delete" method="post">
            <div class="item">
                <input type="checkbox" name="removeItem" value="<%=item._id%>" onChange="this.form.submit()">
                <p> <%= item.name %></p>
            </div>
            <input type="hidden" name="listName" value="<%= listTitle %>"></input>
        </form>
        <% }) %>
            

        <form action="/" class="item" method="post">
            <input type="text" name="itemAdd" placeholder="Add Item" autocomplete="off">
            <button name="list" type="submit" value="<%= listTitle %>">+</button>
        </form>
    </div>
    
</body>
</html>